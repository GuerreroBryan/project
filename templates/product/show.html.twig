{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <div class="container">
        <div class="row">
            <div class="col-sm">

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr>
                        <th><a href="{{ path('product_edit', {'id': product.id}) }}">edit</a></th>
                        <td>{{ include('product/_delete_form.html.twig') }}</td>
                    </tr>
                    </tbody>
                </table>

            </div>
            <div class="col-sm">

                    <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.name }}" width="400" height="300" />
                <br>
                <a href="{{ path('product_index') }}">back to list</a>

            </div>
        </div>
    </div>


{% endblock %}
